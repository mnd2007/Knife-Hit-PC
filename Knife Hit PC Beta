if __name__ == '__main__':
    pygame.init()
    pygame.display.set_caption('Knife hit')
    size = width, height = 1600, 900
    screen = pygame.display.set_mode(size)

    running = True
    meny = True
    game = False
    res = False
    payza = False
    lose = False
    a = None
    najat = False

    while running:
        screen.fill((0, 50, 50))
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                running = False
            if event.type == pygame.MOUSEBUTTONDOWN:
                pass
            elif event.type == pygame.KEYDOWN:
                if event.key == pygame.K_SPACE:
                    if game:
                        vil = True
            if event.type == pygame.MOUSEMOTION:
                pass
            elif event.type == pygame.KEYDOWN:
                if event.key == pygame.K_ESCAPE:
                    if game:
                        meny = False
                        game = False
                        res = True
                        payza = True
                        lose = False
            if event.type == pygame.MOUSEBUTTONUP:
                x1, y1 = event.pos
                if meny:
                    if 604 < x1 < 906 and 679 < y1 < 829:
                        meny = False
                        game = True
                        res = False
                        payza = False
                        lose = False
                        score1 = 0
                        knife_w.rect = knife_w.image.get_rect()
                        knife_w.rect.x = 610
                        knife_w.rect.y = 705
                        s2 = []
                        s3 = []
                    elif 1489 < x1 < 1591 and 9 < y1 < 111:
                        running = False
                elif game:
                    if 9 < x1 < 101 and 9 < y1 < 101:
                        meny = False
                        game = False
                        res = True
                        payza = True
                        lose = False
                elif payza:
                    if 549 < x1 < 641 and 499 < y1 < 591:
                        meny = False
                        game = True
                        res = False
                        payza = False
                        lose = False
                    elif 749 < x1 < 841 and 499 < y1 < 591:
                        meny = False
                        game = True
                        res = False
                        payza = False
                        lose = False
                        score1 = 0
                        level = 1
                        vil = False
                        najat = True
                        knife_w.rect = knife_w.image.get_rect()
                        knife_w.rect.x = 610
                        knife_w.rect.y = 705
                    elif 949 < x1 < 1041 and 499 < y1 < 591:
                        meny = True
                        game = False
                        res = False
                        payza = False
                        lose = False
                elif lose:
                    if 599 < x1 < 691 and 499 < y1 < 591:
                        meny = False
                        game = True
                        res = False
                        payza = False
                        lose = False
                        score1 = 0
                        level = 1
                        vil = False
                        najat = True
                        knife_w.rect = knife_w.image.get_rect()
                        knife_w.rect.x = 610
                        knife_w.rect.y = 705
                    elif 849 < x1 < 941 and 499 < y1 < 591:
                        meny = True
                        game = False
                        res = False
                        payza = False
                        lose = False
                        level = 1
                        vil = False
                        najat = True
        if game:
            b += 1 + level
            if level >= 3:
                b += 0.2
            if b >= 360:
                b -= 360
        dsdsdasd = knife_w.rect.y
        if dsdsdasd <= 480:
            vil = False
            knife_w.rect.x = 610
            knife_w.rect.y = 705
            score1 += 1
            sound1 = pygame.mixer.Sound('wood1.wav')
            sound1.play()
            if not popad:
                s[nojei] = pygame.sprite.Sprite(knife_g2)
                s[nojei].image = knife
                s[nojei].rect = s[nojei].image.get_rect()
                s[nojei].rect.x = 650
                s[nojei].rect.y = 480
                nojei += 1
                nojei2 -= 1
            s2.append(315)
        if game:
            for i in range(len(s2)):
                s2[i] += 2
                if level >= 3:
                    s2[i] += 0.2
                if s2[i] >= 360:
                    s2[i] -= 360
        if vil:
            m21 = False
            for x in range(len(s2)):
                if pygame.sprite.collide_mask(knife_w, s[x]):
                    m21 = True
                    sound12 = pygame.mixer.Sound('jelezo.wav')
                    sound12.play()
            if m21:
                vil = False
                meny = False
                game = False
                res = False
                payza = False
                lose = True
                con = sqlite3.connect('knife_hit1')
                cur = con.cursor()
                result = cur.execute("""select * from score""").fetchall()
                score2 = ''
                for i in result:
                    score2 = str(str(i)[1:][:-2])
                if score1 > int(score2):
                    cur.execute('UPDATE score SET score = ' + str(score1))
                con.commit()
                con.close()
                score1 = 0
        if nojei2 == 0:
            nojei = 0
            nojei2 = 7
            level += 1
            if level > 5:
                level = 1
                nojei = 0
                nojei2 = level + 7
            s2 = []
            s3 = []
            for i in s:
                i.kill()
            if level == 2:
                s[0] = pygame.sprite.Sprite(knife_g2)
                s[0].image = knife
                s[0].rect = s[0].image.get_rect()
                s[0].rect.x = 650
                s[0].rect.y = 480
                s2.append(135)
                nojei += 1
            if level == 3:
                s[0] = pygame.sprite.Sprite(knife_g2)
                s[0].image = knife
                s[0].rect = s[0].image.get_rect()
                s[0].rect.x = 650
                s[0].rect.y = 480
                s2.append(225)
                s[1] = pygame.sprite.Sprite(knife_g2)
                s[1].image = knife
                s[1].rect = s[0].image.get_rect()
                s[1].rect.x = 650
                s[1].rect.y = 480
                s2.append(45)
                nojei += 2
            if level == 4:
                s[0] = pygame.sprite.Sprite(knife_g2)
                s[0].image = knife
                s[0].rect = s[0].image.get_rect()
                s[0].rect.x = 650
                s[0].rect.y = 480
                s2.append(315)
                s[1] = pygame.sprite.Sprite(knife_g2)
                s[1].image = knife
                s[1].rect = s[0].image.get_rect()
                s[1].rect.x = 650
                s[1].rect.y = 480
                s2.append(195)
                s[2] = pygame.sprite.Sprite(knife_g2)
                s[2].image = knife
                s[2].rect = s[0].image.get_rect()
                s[2].rect.x = 650
                s[2].rect.y = 480
                s2.append(75)
                nojei += 3
            if level == 5:
                s[0] = pygame.sprite.Sprite(knife_g2)
                s[0].image = knife
                s[0].rect = s[0].image.get_rect()
                s[0].rect.x = 650
                s[0].rect.y = 480
                s2.append(345)
                s[1] = pygame.sprite.Sprite(knife_g2)
                s[1].image = knife
                s[1].rect = s[0].image.get_rect()
                s[1].rect.x = 650
                s[1].rect.y = 480
                s2.append(315)
                s[2] = pygame.sprite.Sprite(knife_g2)
                s[2].image = knife
                s[2].rect = s[0].image.get_rect()
                s[2].rect.x = 650
                s[2].rect.y = 480
                s2.append(165)
                s[3] = pygame.sprite.Sprite(knife_g2)
                s[3].image = knife
                s[3].rect = s[0].image.get_rect()
                s[3].rect.x = 650
                s[3].rect.y = 480
                s2.append(135)
                nojei += 4
        if najat:
            nojei = 0
            nojei3 = 0
            nojei2 = 7
            level = 1
            s2 = []
            s3 = []
            for i in s:
                i.kill()
            najat = False
        Rastav(meny, game, payza, res, score1, lose)
        pygame.display.flip()

knife_s11 = pygame.sprite.Sprite()
knife_s12 = pygame.sprite.Sprite()
knife_s13 = pygame.sprite.Sprite()
knife_s14 = pygame.sprite.Sprite()
knife_s15 = pygame.sprite.Sprite()
knife_s16 = pygame.sprite.Sprite()
